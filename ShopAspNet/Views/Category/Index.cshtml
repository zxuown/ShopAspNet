*@
@{
}
@{
    ViewData["Title"] = "Admin Page";
    Layout = "_AdminLayout";
}
@model List<Category>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6">
            <h1>Category</h1>
            <a class="btn btn-outline-primary mt-5 mb-5" href="/Category/Create">Create</a>
            <div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Image</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var category in Model)
                        {
                            <tr>
                                <td>@category.Id</td>
                                <td>@category.Title</td>
                                <td>
                                    @if (@category.Image != null)
                                    {
                                        <img class="img-thumbnail" src="@category.Image.Url()" />
                                    }
                                </td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-outline-primary" href="/Category/Edit/@category.Id">Edit</a>
                                        <form method="post" action="/Category/Delete/@category.Id">
                                            <button class="btn btn-outline-warning">Delete</button>
                                        </form>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>
