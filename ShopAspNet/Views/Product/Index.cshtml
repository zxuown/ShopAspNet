@{
}
@{
    ViewData["Title"] = "Admin Page";
    Layout = "_AdminLayout";
}
@model List<Product>
<div class="container">
    <div class="row mt-5">
        <div class="col-md-6">
            <h1>Product</h1>
            <a class="btn btn-outline-primary mt-5 mb-5" href="/AdminProduct/Create">Create</a>
            <div>
                <table class="table table-hover table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>MainImage</th>
                            <th>Images</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Title</td>
                                <td>@product.Description</td>
                                <td>@product.Price</td>
                                <td>@product.Category.Title</td>

                                <td>
                                    @if (@product.MainImage != null)
                                    {
                                        <img class="img-thumbnail" src="@product.MainImage.Url()" />
                                    }
                                </td>
                                <td>
                                    @foreach (var image in product.Images)
                                    {
                                        <img class="img-thumbnail" src="@image.Url()" />
                                    }
                                </td>

                                <td>
                                <td>
                                    <div class="d-flex">
                                        <a class="btn btn-outline-primary" href="/AdminProduct/Edit/@product.Id">Edit</a>
                                        <form method="post" action="/AdminProduct/Delete/@product.Id">
                                            <button class="btn btn-outline-warning">Delete</button>
                                        </form>
                                    </div>

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

            </div>
        </div>
    </div>
</div>