@using ShopAspNet.Models;
@{
}
@model Cart
<div class="total-table">


    <table>
        <thead>
            <tr>
                <th>Total</th>
                <th>Subtotal</th>
                <th>Shipping</th>
                <th class="total-cart">Total Cart</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="total">@Model.SubTotal().ToString("#.##")</td>
                <td class="sub-total">@Model.SubTotal().ToString("#.##")</td>
                <td class="shipping">@Model.Shipping().ToString("#.##")</td>
                <td class="total-cart-p">@Model.Total().ToString("#.##")</td>
            </tr>
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-lg-12 text-right">
        <a href="/checkout" class="primary-btn chechout-btn">Proceed to checkout</a>
    </div>
</div>