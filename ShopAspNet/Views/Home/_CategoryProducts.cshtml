@{
}
@model Category;
@foreach (var product in Model.Products)
{
    <div class="col-lg-3 col-md-3">
        <div class="single-product-item">
            <figure>
                <img class="product-image" src="@product.MainImage.Url()" alt="">
                <div class="p-status">new</div>
                <div class="hover-icon">
                    <a href="@product.MainImage.Url()" class="pop-up">
                        <img src="/img/icons/zoom-plus.png" 
                                                     alt="">
                    </a>
                </div>
            </figure>
            <div class="product-text">
                <a href="#">
                    <h6>@product.Description</h6>
                </a>
                <p>@product.Price</p>
            </div>
        </div>
    </div>

}